[global/wm]
margin-top = 0

[module/xkeyboard]
type = internal/xkeyboard

; List of indicators to ignore
blacklist-0 = num lock
blacklist-1 = scroll lock

format = <label-layout>
label-layout = ⌨ %icon%
format-underline = ${colors.dark-red}
layout-icon-0 = us;us
layout-icon-1 = latam;la

[module/gmail]
type = custom/script
exec = ~/.config/polybar/gmail/launch.py -ns -c '#ab4642' -p ''
tail = true
format-underline = ${colors.red}
click-left = ~/.local/bin/fm

[module/pulseaudio]
type = custom/script
tail = true
format-underline = ${colors.red}

exec = ~/.config/polybar/pulseaudio/pulseaudio-control.bash listen
click-left = ~/.config/polybar/pulseaudio/pulseaudio-control.bash togmute
click-right = ~/.config/polybar/pulseaudio/pulseaudio-control.bash next-sink
scroll-up = ~/.config/polybar/pulseaudio/pulseaudio-control.bash up
scroll-down = ~/.config/polybar/pulseaudio/pulseaudio-control.bash down
label-foreground = ${colors.foreground}

[module/network]
type = internal/network
interface = enp39s0
interval = 5.0

format-connected-underline = ${colors.red}
label-connected = " %upspeed%    %downspeed%"

label-disconnected = ❎ not connected

[module/spotify]
type = custom/script
interval = 1
format =  <label>
exec = python ~/.config/polybar/spotify/spotify_status.py -f '{play_pause}{artist} - {song}' -p ',[paused] '
click-left = playerctl play-pause
click-right = spotify
format-underline = ${colors.red}

[module/date]
type = internal/date
interval = 5

date =
date-alt = "%a %b %d "

time = %H:%M
time-alt = %H:%M%

format-prefix =
format-underline = ${colors.red}

label = %date%%time%

